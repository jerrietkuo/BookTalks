<section class="container">
  <h3 class="Bookshelf-name">{{Bookshelf.name}}</h3>
  <h4>Opening Hour: {{format_time Bookshelf.starting_date}}</h4>
  <h4>Closing Hour: {{format_time Bookshelf.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each Bookshelf.Books as |Book|}}
    {{> Book-details}}
    {{/each}}
  </section>
</section>
